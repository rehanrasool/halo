extends layout

block content
    h1 Cards

    table#my_table(style='width:100%')
      tbody
        tr
            th Name
            th Email
            th Card Number
            th CVV
            th Expiration Date
            th Balance

        if users
          for user in users
              tr
                td #{user.first_name} #{user.last_name}
                td #{user.email}
                if user.card
                  td #{user.card.pan_hidden}
                  td #{user.card.cvv}
                  td #{user.card.expr}
                else
                  td N/A
                  td N/A
                  td N/A
                if user.velocity_control
                  td $#{user.velocity_control.amount_limit}
                else
                  td N/A
